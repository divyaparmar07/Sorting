<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/ball"
        android:layout_width="50dp"
        android:layout_height="51dp"
        android:layout_marginTop="106dp"
        android:src="@drawable/baseline_sports_soccer_24"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/buttonBubbleSort"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="56dp"
        android:layout_marginBottom="384dp"
        android:text="Bubble Sort"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/buttonMergeSort" />

    <Button
        android:id="@+id/buttonMergeSort"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="48dp"
        android:text="Merge Sort"
        app:layout_constraintBaseline_toBaselineOf="@+id/buttonBubbleSort"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/textViewData"
        android:layout_width="341dp"
        android:layout_height="311dp"
        android:layout_marginTop="56dp"
        android:singleLine="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonBubbleSort" />

</androidx.constraintlayout.widget.ConstraintLayout>